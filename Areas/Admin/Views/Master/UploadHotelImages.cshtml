	function bindhotelImages() {		
		if ($("#ddlHotel").val() == "") {
			alert("Please Select Hotel");
			$("#ddlHotel").focus();
			return;
		}
		var id = $("#ddlHotel").val();
		$('#div3').show();

		$.ajax({
			url: "/admin/Master/UploadHotelImages/",
			type: "get",
			data: { id: $("#ddlHotel").val() },
			datatype: "json",
			success: function (data1) {
				//  $('#div3').show();
				var htmlNew = data1;
				$('#div3').html($(htmlNew).find('#divDetails'));
				// $("#showSpinner").hide();
			}
		});
	}

	function insertData() {
		if ($("#ddlCity").val() == "") {
			alert("Please Select City !!!");
			$("#ddlCity").focus();
			return;
		}
		if ($("#ddlHotel").val() == "") {
			alert("Please Select Hotel !!!");
			$("#ddlHotel").focus();
			return;
		}
		if ($("#fuUpload").val() == "") {
			alert("Please Select Image !!!");
			$("#fuUpload").focus();
			return;
		}
		var data = new FormData;
		data.append("HotelId", $("#ddlHotel").val());
		var files = $("#fuUpload").get(0).files;
		for (var i = 0; i < files.length; i++) {
			data.append("Image", files[i]);
		}


		// $("#showSpinner").show();
		$.ajax({
			url: "/admin/Master/UploadHotelImages",
			type: "POST",
			contentType: false,
			processData: false,
			data: data,
			success: function () {
				alert("Images Succesfully Uploaded.");
				bindhotelImages();
				$("#fuUpload").val('');
				$("#showSpinner").hide();
			}
		});
	}


</script>

